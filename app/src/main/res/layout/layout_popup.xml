<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp" >

    <TextView
        android:id="@+id/popCgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cgpa"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_cgpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popCgpa"
        android:inputType="numberDecimal"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/popTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_cgpa"
        android:layout_marginTop="20dp"
        android:text="@string/target"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popTarget"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"
        android:textColor="@color/white" />

</RelativeLayout>