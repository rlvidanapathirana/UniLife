<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addLectureActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddLecture">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addLectureHedder"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/theme_blue"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="175dp"
            android:layout_height="89dp"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/lecture_headder_foreground" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lectureHedder"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="43dp"
            android:layout_height="27dp"
            android:layout_marginTop="19dp"
            android:background="@color/theme_blue"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.426"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.076"
            app:srcCompat="@drawable/arrow" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="355dp"
        android:layout_height="491dp"
        android:layout_marginTop="15dp"
        android:background="@color/theme_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLectureHedder">

        <TextView
            android:id="@+id/lectureNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lectureName"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextLectureName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lecturedateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextLectureDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.096"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLectureName" />

        <TextView
            android:id="@+id/lecturetimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextLectureTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLectureDate" />

        <TextView
            android:id="@+id/lectureplaceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextLecturePlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLectureTime" />

        <TextView
            android:id="@+id/lectureConductuctedByTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conductedBy"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextLectureConductedBy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLecturePlace" />

        <TextView
            android:id="@+id/lectureNoteTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/specialNote"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextLectureNote"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLectureConductedBy" />

        <EditText
            android:id="@+id/editTextLectureName"
            android:layout_width="311dp"
            android:layout_height="31dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/txtbox"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/lecturedateTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lectureNameTxt" />

        <Button
            android:id="@+id/editTextLectureDate"
            android:layout_width="311dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/txtbox"
            android:ems="10"
            android:inputType="date"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/lecturetimeTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lecturedateTxt" />

        <Button
            android:id="@+id/editTextLectureTime"
            android:layout_width="311dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/txtbox"
            android:ems="10"
            android:inputType="time"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/lectureplaceTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lecturetimeTxt" />

        <EditText
            android:id="@+id/editTextLecturePlace"
            android:layout_width="311dp"
            android:layout_height="31dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/txtbox"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/lectureConductuctedByTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lectureplaceTxt" />

        <EditText
            android:id="@+id/editTextLectureConductedBy"
            android:layout_width="311dp"
            android:layout_height="31dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/txtbox"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/lectureNoteTxt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lectureConductuctedByTxt" />

        <EditText
            android:id="@+id/editTextLectureNote"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:background="@drawable/txtbox"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:maxLength="50"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/editBtnOpenLecture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lectureNoteTxt" />

        <Button
            android:id="@+id/editBtnOpenLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="18dp"
            android:text="@string/save"
            android:textColor="@color/white"
            app:backgroundTint="@color/theme_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.913"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLectureNote" />

        <Button
            android:id="@+id/clear_textBtnOpenLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="18dp"
            android:text="@string/clear"
            android:textColor="@color/black"
            app:backgroundTint="@color/shadow_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editBtnOpenLecture"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLectureNote" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>