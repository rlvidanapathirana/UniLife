<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginBottom="40dp"
        android:background="@color/theme_blue"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/eventhome"
            android:layout_width="122dp"
            android:layout_height="76dp"
            android:contentDescription="@string/eventhome"
            app:layout_constraintBottom_toTopOf="@+id/createEventTopic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/eventhome" />

        <TextView
            android:id="@+id/createEventTopic"
            android:layout_width="211dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:text="@string/Event_reminder"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventhome" />

        <ImageButton
            android:id="@+id/imageMenu"
            android:layout_width="38dp"
            android:layout_height="27dp"
            android:background="@color/theme_blue"
            android:contentDescription="@string/menu"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/eventhome"
            app:layout_constraintHorizontal_bias="0.294"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.203"
            app:srcCompat="@drawable/menu"
            tools:srcCompat="@drawable/menu" />

        <ImageButton
            android:id="@+id/imageSelect"
            android:layout_width="37dp"
            android:layout_height="35dp"
            android:background="@color/theme_blue"
            android:contentDescription="@string/select"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/createEventTopic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.821"
            app:srcCompat="@drawable/select"
            tools:srcCompat="@drawable/select" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/addEventcrt"
        android:layout_width="74dp"
        android:layout_height="65dp"
        android:layout_marginBottom="4dp"
        android:background="@color/theme_white"
        android:contentDescription="@string/imageAdd"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewboxLayout"
        app:srcCompat="@drawable/plus"
        tools:srcCompat="@drawable/plus" />

    <LinearLayout
        android:id="@+id/listViewboxLayout"
        android:layout_width="409dp"
        android:layout_height="390dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/theme_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/addEventcrt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1">


        <ListView
            android:id="@+id/listViewbox"
            android:layout_width="wrap_content"
            android:layout_height="362dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/theme_white"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="199dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>